<%= form_for(@profile, remote: true, :html => { :role => "form" }) do |f| %>
    <div id="error_explanation" class="bg-danger text-danger">
    </div>

    <div class="row">
      <div class="col-sm-6">
        <div class="form-group">
          <%= f.label :avatar, :class => "control-label" %>
          <%= f.file_field :avatar, :class => "form-control first_input"  %>
        </div>
        <div class="form-group">
          <%= f.label :name, :class => "control-label" %>
          <%= f.text_field :name, :class => "form-control" %>
        </div>
        <div class="form-group">
          <%= f.label :birthday, :class => "control-label" %>
          <%= f.text_field :birthday, :class => "form-control" %>
        </div>
        <div class="form-group">
          <%= f.label :biography, :class => "control-label" %>
          <%= f.text_field :biography, :class => "form-control" %>
        </div>
      </div>

        <div class="form-group">
          <%= f.submit  @profile.new_record? ? "Create Create" : "Update Profile", :class => "btn btn-primary" %>
        </div>
      <%= link_to 'All projects', projects_path, class: 'btn btn-info' %>
      </div>
    </div>
<% end %>

